  <script>
    const nomes = [
      "Ana P.", "Lucas S.", "Carla M.", "Pedro F.", "Laura R.", "Rafael T.", "Julia A.",
      "Fernando B.", "Isabela C.", "Mateus D.", "Camila E.", "Gustavo F.", "Bianca G.", "Victor H."
    ];

    const mensagens = ["acabou de entrar no grupo!", "est√° participando agora!", "se juntou ao grupo!"];
    const popup = document.getElementById('popup');

    function mostrarPopup() {
      const nome = nomes[Math.floor(Math.random() * nomes.length)];
      const msg = mensagens[Math.floor(Math.random() * mensagens.length)];
      popup.textContent = `${nome} ${msg}`;
      popup.classList.add('show');
      setTimeout(() => popup.classList.remove('show'), 3000);
    }
    setInterval(mostrarPopup, 3500);

    let contador = 35;
    function reduzirContador() {
      contador--;
      if (contador < 0) contador = 0;
      document.getElementById('contador').textContent = contador;
    }
    setInterval(reduzirContador, 2000);
  </script>
